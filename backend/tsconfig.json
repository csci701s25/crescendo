{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs", //can write es6-style code, but will be compiled to commonjs
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
